{
  "name": "finmind-app",
  "version": "1.0.0",
  "description": "FinMind全记账 React Native应用",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "check": "npm run lint && npx tsc --noEmit",
    "build:android": "cd android && gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace FinMind.xcworkspace -scheme FinMind -configuration Release",
    "expo:start": "expo start",
    "expo:android": "expo start --android",
    "expo:ios": "expo start --ios",
    "expo:web": "expo start --web"
  },
