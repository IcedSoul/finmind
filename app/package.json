    "@react-navigation/native-stack": "^7.3.26",
    "@react-navigation/stack": "^7.4.7",
    "axios": "^1.7.7",
    "babel-plugin-module-resolver": "^5.0.2",
    "expo": "54.0.1",
    "expo-document-picker": "~14.0.6",
    "expo-file-system": "~19.0.8",
