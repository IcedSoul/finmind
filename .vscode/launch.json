{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/backend/main.go",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PORT": "8080",
                "ENVIRONMENT": "development"
            },
            "args": [],
            "showLog": true,
            "console": "integratedTerminal",
            "stopOnEntry": false
        },
        {
            "name": "Attach to Go Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Debug Go Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/backend",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "ENVIRONMENT": "test"
            },
            "args": [
                "-test.v"
            ],
            "showLog": true
        }
    ]
}